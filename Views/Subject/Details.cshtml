@model Perusedit.Models.Subject


@{
    ViewBag.Title = "Details";
}

@section scripts 
    {
    <script type="text/javascript">
        function functieAdaugare(id)
        {
            if (document.getElementById("iddiv"))
                document.getElementById("iddiv").remove();
            console.log("ajutor")
            var i =
            `<div id="iddiv">
                <form method="post" action="/Response/Create">
                    <input type="hidden" name="SubjectId" value="@Model.Id" />
                    <input type="hidden" name="FatherId" value="${id}" />
                    <input type="text" name="Text" />
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div >`
            var w = document.createRange().createContextualFragment(i)
            var q = document.getElementById(id);
            console.log(document.getElementById(id))
            q.appendChild(w)
        }
    </script>
    }

    @helper Afisare(Perusedit.Models.Response r)
    {
        <div id="@r.Id" class="panel panel-default" style="width:97%;margin-left:2.5%">
            <div class="panel-body">
                @r.Text
                <div style="display:inline-block; float:right">  
                    <button type="button" onclick="functieAdaugare(@r.Id)" class="btn btn-primary" style="padding:0px 0px 0px 0px">
                        <svg width="1.5em" height="1.3em" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg>
                    </button>
                </div>
                <div style="display:inline-block; float:right; margin-right:7.5px" >
                    <form action="/Response/Delete/@r.Id" method="post">
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button type="button" onclick="this.parentNode.submit()" class="btn btn-danger" style="padding:0px 0px 0px 0px">
                            <svg width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-trash-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z" />
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
            @foreach (var i in r.Responses)
            {
                @Afisare(i)
            }
        </div>
    }

    <h2>Details</h2>

    <div>
        <h4>Subject</h4>
        <hr />

        <div class="panel panel-default" style="width:100%">
            <div class="panel-heading">
                <h3 class="panel-title">@Model.Title</h3>
            </div>
            <div class="panel-body">
                @Model.Text
            </div>
            @foreach (var i in Model.Responses)
            {
                if (i.FatherId == null)
                {
                    @Afisare(i);
                }
            }
        </div>

        <div>
            <a href="/Category/Index/@Model.CategoryId">Back to List</a>
        </div>
    </div>
