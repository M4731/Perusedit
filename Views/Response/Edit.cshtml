@model Perusedit.Models.Response

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Response", FormMethod.Post, new { id=@Model.Id}))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <div class="form-horizontal">
        <h4>Response</h4>
        <hr />
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.SubjectId)

        <div class="form-group">
            @Html.LabelFor(m => m.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/Subject/Details/@Model.SubjectId">Back to Subject</a>
</div>
